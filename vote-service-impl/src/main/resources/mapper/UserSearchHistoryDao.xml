<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.duan.vote.dao.UserSearchHistoryDao">

    <sql id="allFields">id, user_id, `count`, content, insert_time</sql>

    <select id="find" resultType="com.duan.vote.entity.UserSearchHistory"
            parameterType="com.duan.vote.entity.UserSearchHistory">
        SELECT
        <include refid="allFields"/>
        FROM user_search_history
        <where>
            <if test="id != null">
                AND id=#{id}
            </if>
            <if test="userId != null">
                AND user_id=#{userId}
            </if>
            <if test="count != null">
                AND `count`=#{count}
            </if>
            <if test="content != null and content.length() > 0">
                AND content like '%${content}%'
            </if>
            <if test="insertTime != null">
                AND insert_time=#{insertTime}
            </if>
        </where>
        ORDER BY `count` desc
    </select>

    <insert id="insert" parameterType="com.duan.vote.entity.UserSearchHistory" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_search_history (content, `count`, user_id)
            VALUE (#{content}, #{count}, #{userId})
    </insert>

    <update id="update" parameterType="com.duan.vote.entity.UserSearchHistory">
        UPDATE user_search_history
        <set>
            <if test="content != null and content.length() > 0">
                content=#{content},
            </if>
            <if test="count != null">
                `count`=#{count},
            </if>
            <if test="userId != null">
                user_id=#{userId},
            </if>
        </set>
        <where>
            id=#{id}
        </where>

    </update>
</mapper>